<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.materialdesignapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />

            </intent-filter>
        </activity>
        <activity android:name=".activities.StandAloneToolBarActivity"/>
        <activity android:name=".activities.ContextualToolBarActivity"/>
        <activity android:name=".activities.AppBarLayout"/>
        <activity android:name=".activities.CollapsingToolBarLayoutActivity"/>
        <activity android:name=".activities.NavigationViewActivity"/>
        <activity android:name=".activities.RecyclerViewActivity"/>
        <activity android:name=".activities.TestFragmentsActivity"/>


    </application>

</manifest>